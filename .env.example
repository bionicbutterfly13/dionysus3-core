# Dionysus Core Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# VPS PostgreSQL (via SSH tunnel)
# =============================================================================
# STEP 1: Start SSH tunnel to VPS
#   ssh -L 5432:localhost:5432 -i ~/.ssh/mani_vps mani@72.61.78.89
#
# STEP 2: Set DATABASE_URL (replace PASSWORD with actual password)
DATABASE_URL=postgresql://dionysus:PASSWORD@localhost:5432/dionysus
#
# For tests, use ephemeral test database (no VPS needed):
#   DATABASE_URL=postgresql://dionysus:dionysus2024@localhost:5434/dionysus_test
#   docker compose -f docker-compose.test.yml up -d db-test

# =============================================================================
# AI Services
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================================================
# Remote Persistence (via n8n webhooks)
# Feature: 002-remote-persistence-safety
# =============================================================================
# n8n webhook configuration (Neo4j access is ONLY through n8n, never direct)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/memory/v1/ingest/message
N8N_RECALL_URL=http://localhost:5678/webhook/memory/v1/recall
MEMORY_WEBHOOK_TOKEN=your-hmac-secret-token

# Ollama embedding service (on VPS, accessed via SSH tunnel)
OLLAMA_URL=http://localhost:11434
OLLAMA_EMBED_MODEL=nomic-embed-text

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO
