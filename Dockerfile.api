FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy configuration
COPY .env .

# Copy application
COPY api/ ./api/
COPY scripts/ ./scripts/
COPY tests/ ./tests/

# Use local smolagents repo
ENV PYTHONPATH="/app:/Volumes/Asylum/repos/smolagents/src"

# Expose port
EXPOSE 8000

# Run the API
CMD ["python", "-m", "uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000"]
